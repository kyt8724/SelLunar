@{
    ViewBag.Title = "Home Page";
}

<div class="well">
    <img class="img-responsive" src="~/Images/items/mainpage/main_slide_04.jpg" />
</div>

<!-- modal dialog -->
<div id="theModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content well row">
            <h2 class="modal-title col-md-10">Zoom Image</h2>
            <button type="button" id="closeModal" class="btn btn-primary btn-lg active text-right" data-dissmiss="modal" aria-hidden="true">Close</button>
        </div>
        <div class="modal-body">
            <img class="modalImage" src="" width="100%" />
        </div>
        <!--<div class="modal-footer"></div>-->
    </div>

</div>

<div class="well text-center">
    <div class="panel-title row text-left">
        &nbsp;&nbsp;<h3><em>Recommended</em></h3>
    </div>
    <div class="row" id="mainImageDiv">
        <div class="col-md-3 img-thumbnail">
            <img id="showModal img-responsive" src="~/Images/items/cases/gold_case01.jpg" width="80%" />
        </div>
        <div class="col-md-3 img-thumbnail">
            <img id="showModal img-responsive" src="~/Images/items/cases/red_case02.jpg" width="80%" />
        </div>
        <div class="col-md-3 img-thumbnail">
            <img id="showModal img-responsive" src="~/Images/items/mainpage/accessory_set.png" width="80%"/>
        </div>
        <div class="col-md-3 img-thumbnail">
            <img id="showModal img-responsive" src="~/Images/items/mainpage/sus_bolt.jpg" width="80%" />
        </div>
    </div>
</div>
<div class="well">
    <div class="row">
        <div class="col-md-6">
            <h4><em>SelLunar News</em></h4>
            <hr />
            <ul>
                <li>
                    <span><small>iPhone 6 case launch</small></span>
                </li>
                <li>
                    <span><small>SelLunar start business</small></span>
                </li>
            </ul>
        </div>
        <div class="col-md-6">
            <h4><em>Assembly Viedeo</em></h4>
            <hr />
            <video src="https://youtu.be/gYTFdtjWioY"></video>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Show Image Zoom Dialog
        $('#mainImageDiv img').click(function (event) {
            $('.modalImage').attr('src', $(this).attr('src'));

            $('#theModal').modal('show');
        });

        // Hide Image Zoom Dialog
        $('#closeModal').click(function () {
            $('#theModal').modal('hide');
        });

    </script>
}
